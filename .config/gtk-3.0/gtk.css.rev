.xfce4-panel.background, #XfcePanelWindow.background {
    border-radius: 10px;
    margin: 10px;
    background-color: rgba(50, 50, 50, 0.9);
    padding: 5px;
}

/* Whisker Menu */
#whiskermenu-button {
    background: transparent; /* Тот же фон, что у панели */
    border: none;
}

/* Лоток состояния (Status Notifier) */
#sn-button {
    background: rgba(50, 50, 50, 0.9);
    border: none;
}

/* Убираем фон у всех кнопок, если нужно */
.xfce4-panel button {
    background: transparent;
    border: none;
}


