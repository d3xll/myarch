@import 'colors.css';




/* panel */
.xfce4-panel {
	background-color: none;
}

.xfce4-panel#XfcePanelWindow {
    border-bottom: 1px solid white;
}

/* tasklist */
.xfce4-panel .tasklist .toggle { 
    font-family: 'JetBrainsMono Nerd Font';
    font-size: 11px;
    padding: 0px 6px;
}

.xfce4-panel .tasklist .toggle:hover { 
    font-family: 'JetBrainsMono Nerd Font';
    padding: 0px 2px;
}

/* workspace switcher */

.xfce4-panel widget grid button.flat.toggle { 
    font-family: 'JetBrainsMono Nerd Font'; 
    font-size: 12px;
    padding: 0px 8px;
}

.xfce4-panel widget grid button.flat.toggle:hover { 
    font-family: 'JetBrainsMono Nerd Font';
    font-size: 14px;
    padding: 0px 8px;
    border-bottom: 2px solid rgb(255, 255, 255);
}